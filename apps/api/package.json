{
  "name": "@dogpile/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler d1 migrations apply dogpile-db --local && wrangler dev --port 8787 --inspector-port 9230",
    "dev:local": "wrangler d1 migrations apply dogpile-db --local && wrangler dev --port 8787",
    "build": "bun build src/index.ts --outdir dist --target browser --minify",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dogpile/core": "workspace:*",
    "@dogpile/db": "workspace:*",
    "effect": "^3.19.13",
    "@effect/platform": "^0.94.0",
    "drizzle-orm": "^0.44.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "typescript": "^5.8.3"
  }
}
