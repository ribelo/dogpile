---
import Layout from '../layouts/Layout.astro'
import DogGrid from '../components/DogGrid'
import Hero from '../components/Hero.astro'
import SearchBar from '../components/SearchBar'
import FilterBar from '../components/FilterBar'
import Footer from '../components/Footer.astro'
import { t } from '../i18n'

const API_URL = import.meta.env.PUBLIC_API_URL ?? 'http://localhost:8787'
---

<Layout title={t('meta.siteTitle')}>
  <div class="grain-overlay min-h-screen">
    <Hero />
    <div class="max-w-6xl mx-auto px-4 md:px-6 pb-2">
      <SearchBar client:load />
    </div>
    <FilterBar client:load />
    <main class="max-w-6xl mx-auto px-4 md:px-6 pt-2 pb-8 md:pb-12 lg:pb-16">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-end gap-4 mb-8 md:mb-12 mt-12">
        <h2 class="font-title text-2xl md:text-3xl lg:text-4xl font-bold text-sys-ink-primary">{t('home.sniffAround')}</h2>
       <a href="/dogs" class="link-arrow text-base md:text-lg min-h-[44px] flex items-center">{t('home.viewAllStories')}</a>
      </div>
      <DogGrid client:load apiUrl={API_URL} />
    </main>
    <Footer />
  </div>
</Layout>
