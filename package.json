{
  "name": "dogpile",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:api & bun run dev:web",
    "dev:api": "bun run --filter @dogpile/api dev",
    "dev:web": "bun run --filter @dogpile/web dev",
    "dev:all": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "db:generate": "bun run --filter @dogpile/db generate",
    "db:migrate": "bun run --filter @dogpile/db migrate",
    "cli": "bun run --filter @dogpile/cli start",
    "db:pull": "bun run cli db pull",
    "db:push": "bun run cli db push",
    "prepare": "effect-language-service patch"
  },
  "devDependencies": {
    "@effect/language-service": "^0.64.0",
    "@types/bun": "^1.2.14",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
